! 1) Settings that will be used in a main program.
Main:numberOfEvents = 1000         ! number of events to generate
Main:timesAllowErrors = 3          ! abort run after this many flawed events

! 2) Settings related to output in init(), next() and stat().
Init:showChangedSettings = on      ! list changed settings
!Init:showAllSettings = off         ! list all settings
Init:showChangedParticleData = off  ! list changed particle data
Init:showAllParticleData = off     ! list all particle data
Next:numberCount = 5000            ! print message every n events
Next:numberShowLHA = 1             ! print LHA information n times
Next:numberShowInfo = 1            ! print event information n times
Next:numberShowProcess = 1         ! print process record n times
Next:numberShowEvent = 0           ! print event record n times
Stat:showPartonLevel = off          ! additional statistics on MPI

Check:nErrList = 1
Random:setSeed=on
Random:seed=1

!PartonLevel:MPI = off
!PartonLevel:ISR = off
!PartonLevel:FSR = off
!HadronLevel:decay = off

! 3) Beam parameter settings. Values below agree with default ones.
Beams:LHEF=test235.lhe
Beams:frameType=4
SLHA:file=test235.slha

//HardQCD:all = on
//PhaseSpace:pTHatMin = 100.

ParticleDecays:limitTau0=on

LesHouches:setlifetime = 2
